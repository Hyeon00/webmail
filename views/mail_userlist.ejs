				        <h4>사용자 목록</h4>
				</div>
                <div class="h-arrange">
                    <nav>
                        <ul>
                          <li>사용자(ID)</li>
                        </ul>
                    </nav>
                </div>
                <div class="divList">
                    <%
                        if (userlist) {
                            for (var i = 0; i < userlist.length; i++) {
                                var id = userlist[i].id;
                    %>
                                <div class="ui grid">
                                    <div class=user><%=id%></div>
                                </div>
                    <%
                            } 
                        } else {
                    %>
                            <div class="ui grid">
                                <div class="noUser">
                                    <h4>사용자가 없습니다.</h4>
                                </div>
                            </div>
                    <%
                        }
                    %>
                </div>
            </div>
        </div>
        <!-- //footer -->
        <div class="footer">
            <p class="copyright">&copy;copy</p>
        </div>
    </div>
</body>
</html>