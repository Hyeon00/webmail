    function idCheck() {
        var id = document.frm.id.value;

        if (document.frm.id.value != "") {
            alert('중복체크 코드 짜기');
            return false;
        } else {
            alert('아이디를 입력하여 주십시오.');
            frm.id.focus();
            return false;
        }
        return true;
    }

    function loginCheck() {
        if (document.frm.id.value == "") {
            alert('아이디를 입력하여 주십시오.');
            frm.id.focus();
            return;
        }
        if (document.frm.password.value == "") {
            alert('비밀번호를 입력하여 주십시오.');
            frm.password.focus();
            return;
        }
        if (document.frm.password_check.value == "") {
            alert('비밀번호 확인을 입력하여 주십시오.');
            frm.password_check.focus();
            return;
        } else {
            if (!(document.frm.password.value == document.frm.password_check.value)) {
                alert("비밀번호가 서로 다릅니다.");
                document.frm.password_check.value == "";
                frm.password_check.focus();
                return;
            }
        }
        if (document.frm.name.value.length == 0) {
            alert('이름을 입력하여 주십시오.');
            frm.name.focus();
            return;
        }
        if (document.frm.phone.value.length == 0) {
            alert('전화번호를 입력하여 주십시오.');
            frm.phone.focus();
            return;
        }
        if (document.frm.birth_date.value.length == 0) {
            alert('생일을 입력하여 주십시오.');
            frm.birth_date.focus();
            return;
        }

        document.frm.submit();
    }
